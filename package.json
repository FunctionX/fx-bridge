{
  "name": "fx-bridge",
  "version": "1.0.0",
  "repository": {
    "type": "github",
    "url": "https://github.com/functionx/fx-bridge"
  },
  "description": "The fx-bridge contract provides fx-chain top-ups and withdrawals on ethereum.",
  "scripts": {
    "evm": "npx hardhat node",
    "test": "npx hardhat test",
    "clear": "rm -rf artifacts cache build dist typechain",
    "typechain": "npx ts-node scripts/genFxBridgeLogicLib.ts && npx hardhat typechain",
    "deploy-local": "npx ts-node scripts/deployFxbridge.ts --fx-node='http://localhost:26657' --eth-node='http://localhost:8545' --eth-admin-addr='0x00000' --fx-token-addr='0x00000' --fx-token-addr=0x6294beEb3Cf4AA360A9daA2C32B480795547e398 --eth-deploy='privatekey' --network=local",
    "verify": "npx hardhat run --network mainnet scripts/verifyFxBridge.ts",
    "coverage": "node --max-old-space-size=4096 ./node_modules/.bin/hardhat coverage  --network hardhat --solcoverjs ./.solcover.js",
    "slither": "pip3 install --user slither-analyzer && slither .",
    "sizer": "npx hardhat size-contracts"
  },
  "author": "Jehan Tremback",
  "license": "None",
